---
import ClockIcon from "@/icons/time-line.svg";

interface Props {
    id: string;
    title: string;
    description: string;
    category: string;
    tags: string[];
    useCase: string;
    publishDate: Date;
}

const {id, title, description, category, tags, useCase, publishDate} = Astro.props as Props;

const prompt = {
    id,
    data: {
        title,
        description,
        category,
        tags,
        useCase,
        publishDate,
    },
};
---

<a href=`/prompts/${id}` aria-label=`View ${title} prompt` class="flex flex-col md:flex-row md:items-center gap-4">
    <!--prompt category badge-->
    <div class="flex-none w-full md:w-40 h-40 overflow-hidden rounded-xl bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center">
        <div class="text-white text-center">
            <div class="text-2xl font-bold mb-1">ðŸ¤–</div>
            <div class="text-xs font-medium px-2">{prompt.data.category}</div>
        </div>
    </div>
    <!--prompt info-->
    <div class="flex flex-col gap-2">
        <h3 class="text-xl font-bold">{prompt.data.title}</h3>
        <div class="flex flex-col gap-4">
            <p class="text-sm">{prompt.data.description}</p>
        </div>
    </div>
</a>