---
import {getCollection, render} from "astro:content";
import Layout from "../../layouts/Layout.astro";
import BackBtn from "../../components/BackBtn.astro";
import BackToTop from "../../components/BackToTop.astro";

export async function getStaticPaths() {
    const prompts = await getCollection('prompts');
    return prompts.map(prompt => ({
        params: {id: prompt.id},
        props: {prompt},
    }));
}

const {prompt} = Astro.props;

const {title, description, category, tags, useCase, publishDate, relatedProjects} = prompt.data;

const {Content} = await render(prompt);

// Get related projects if any
let projects = [];
if (relatedProjects && relatedProjects.length > 0) {
    const allProjects = await getCollection('projects');
    projects = allProjects.filter(project => 
        relatedProjects.some(relatedProject => relatedProject.id === project.id)
    );
}
---

<Layout title={title} description={description} scrollSmooth={true}>
    <>
        <div class="flex justify-center mt-10">
            <BackBtn/>
        </div>
        
        <div class="flex flex-col gap-6 justify-center">
            <div class="flex flex-col gap-4 text-center">
                <span class="text-sm px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-full font-medium self-center">
                    {category}
                </span>
                <h1 class="text-3xl font-bold">{title}</h1>
                <p class="text-gray-600 dark:text-gray-400">{description}</p>
            </div>
            
            <div class="flex flex-col md:flex-row md:items-center gap-4 text-sm text-gray-500 justify-center">
                <div class="flex items-center gap-2">
                    <span class="font-medium">Use Case:</span>
                    <span>{useCase}</span>
                </div>
                <span class="hidden md:block">&middot;</span>
                <div class="flex items-center gap-2">
                    <span class="font-medium">Published:</span>
                    <time datetime={publishDate.toISOString()}>
                        {publishDate.toDateString()}
                    </time>
                </div>
            </div>

            <div class="flex flex-wrap gap-2 justify-center">
                {tags.map((tag) => (
                    <span class="text-xs px-2 py-1 bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 rounded">
                        #{tag}
                    </span>
                ))}
            </div>
        </div>

        <!-- Prompt Code Block -->
        <div class="mt-8">
            <h2 class="text-xl font-semibold mb-4">Prompt</h2>
            <div class="bg-gray-900 rounded-lg p-4 overflow-x-auto">
                <pre class="text-green-400 text-sm whitespace-pre-wrap"><code>{prompt.data.prompt}</code></pre>
            </div>
            <div class="mt-2 flex justify-end">
                <button 
                    onclick="navigator.clipboard.writeText(this.previousElementSibling.querySelector('code').textContent)"
                    class="text-xs px-3 py-1 bg-blue-600 hover:bg-blue-700 text-white rounded transition-colors"
                >
                    Copy Prompt
                </button>
            </div>
        </div>

        <!-- Content (additional details, context, examples) -->
        <article id="article" class="mt-8 prose dark:prose-invert max-w-none">
            <Content/>
        </article>

        <!-- Related Projects Section -->
        {projects.length > 0 && (
            <section class="mt-8">
                <h2 class="text-xl font-semibold mb-4">Used in Projects</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    {projects.map((project) => (
                        <a 
                            href={`/projects/${project.id}`}
                            class="p-4 border border-gray-200 dark:border-gray-700 rounded-lg hover:shadow-lg transition-shadow"
                        >
                            <h3 class="font-semibold mb-2">{project.data.title}</h3>
                            <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">{project.data.summary}</p>
                            <div class="flex flex-wrap gap-1">
                                {project.data.tags.slice(0, 3).map((tag) => (
                                    <span class="text-xs px-2 py-1 bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 rounded">
                                        {tag}
                                    </span>
                                ))}
                            </div>
                        </a>
                    ))}
                </div>
            </section>
        )}

        <BackToTop />
    </>
</Layout>

<script>
    // Copy functionality for the prompt
    document.addEventListener('DOMContentLoaded', () => {
        const copyButton = document.querySelector('[onclick*="clipboard"]');
        if (copyButton) {
            copyButton.addEventListener('click', () => {
                // Temporarily change button text to show feedback
                const originalText = copyButton.textContent;
                copyButton.textContent = 'Copied!';
                setTimeout(() => {
                    copyButton.textContent = originalText;
                }, 2000);
            });
        }
    });
</script>