        <ProfileInfo/>
        <ProfileFacts/>
        <ProfileActionButton/>
        <TabsButtons client:idle>
            <AboutMeCC slot="portfolio"/>
            <ProjectsCC slot="about"/>
        </TabsButtons>
    </>
</Layout>
